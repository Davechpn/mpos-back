//PREMIUMS MODELS ////////////////////////////////////////////////////////////
model Feature {
  id          String      @id @default(uuid())
  name        String      @unique
  description String?
  type        FeatureType @default(Free)
  industries  Industry[]
  countries   Country[]
  promotions  Promotion[]
  packages    Package[]
}

model Package {
  id          String         @id @default(uuid())
  name        String         @unique
  description String?
  prices      PackagePrice[]
  features    Feature[]
  color       String?
  level       Int            @unique
  promotions  Promotion[]
  payment     Payment[]
}

model PackagePrice {
  id            String   @id @default(uuid())
  duration      Float
  amount        Float
  extentionTime Float?
  Package       Package? @relation(fields: [packageId], references: [id])
  packageId     String?
}

model Promotion {
  id          String     @id @default(uuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime
  features    Feature[]
  industries  Industry[]
  countries   Country[]
  packages    Package[]
  createdBy   User?      @relation(fields: [createdById], references: [id])
  createdById String?
  createdAt   DateTime   @default(now())
}

model Payment {
  id            String   @id @default(uuid())
  amount        Decimal
  date          DateTime
  center        String?
  package       Package  @relation(fields: [packageId], references: [id])
  packageId     String
  paymentMethod String
  cashier       User     @relation(fields: [cashierId], references: [id])
  cashierId     String
  revoked       Boolean?
  createAt      DateTime @default(now())
}

enum FeatureType {
  Free
  Premium
}

